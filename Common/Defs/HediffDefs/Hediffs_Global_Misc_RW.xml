<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef>
        <defName>RW_LizardSpitHediff</defName>
        <label>lizard spit</label>
        <description>A coating of adhesive spit from a giant lizard. It will rapidly dry and fall off, but also limit motion of any kind until then.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <maxSeverity>1</maxSeverity>
        <comps>
            <li Class="HediffCompProperties_SeverityPerSecond">
                <severityPerSecond>-0.1</severityPerSecond>
            </li>
        </comps>
        <stages>
            <li>
                <label>sticky</label>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.1</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.05</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>sticky</label>
                <minSeverity>0.2</minSeverity>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.2</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.1</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>coated</label>
                <minSeverity>0.4</minSeverity>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.3</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.15</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>coated</label>
                <minSeverity>0.6</minSeverity>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.4</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.2</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>drenched</label>
                <minSeverity>0.8</minSeverity>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.5</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.25</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>
</Defs>