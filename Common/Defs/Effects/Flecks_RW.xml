<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <FleckDef ParentName="FleckBase_Thrown">
        <defName>RW_SpitFleck</defName>
        <graphicData>
            <texPath>Things/Mote/SparkThrown</texPath>
            <shaderType>Mote</shaderType>
            <renderInstanced>true</renderInstanced>
            <color>(0, 0, 0, 1)</color>
        </graphicData>
        <altitudeLayer>MoteOverhead</altitudeLayer>
        <fadeInTime>0.05</fadeInTime>
        <solidTime>0.1</solidTime>
        <fadeOutTime>0.2</fadeOutTime>
    </FleckDef>

    <FleckDef ParentName="FleckBase">
        <defName>RW_LizardBubbleFleck</defName>
        <fleckSystemClass>RainRim.Effects.FleckSystemLizardBubble</fleckSystemClass>
        <graphicData>
            <texPath>Things/Mote/RW_WhiteCircle</texPath>
            <shaderType>TransparentPostLight</shaderType>
            <renderInstanced>true</renderInstanced>
            <color>(1, 1, 1, 1)</color>
        </graphicData>
        <altitudeLayer>MoteOverhead</altitudeLayer>
        <solidTime>0.75</solidTime> <!-- Amount of time for which the bubble is guaranteed to exist -->
        <fadeOutTime>5</fadeOutTime> <!-- Multiplied by 4 random numbers [0, 1] and added to the previous -->
        <useAttachLink>true</useAttachLink>
    </FleckDef>
</Defs>